	if ( currentday == 0 )
		set currentday to GameDay
	else
		if ( currentday != gameday )
			set daycount to ( daycount + 1 )
			set currentday to GameDay
		endif
	endif
endif

;Initiate Vampirism 3days after contracting the disease 
